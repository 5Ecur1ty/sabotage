#!/bin/sh
# release - package file sets

RELEASE=sabotage-$(date -Idate)
mkdir -p dist/$RELEASE
for s in base comp doc etc kernel; do
# tar -czv -T sets/$s -X ignore -f dist/$RELEASE/$s.tar.gz
  cpio -o -H newc <sets/$s |gzip >dist/$RELEASE/$s.cpio.gz
  ls -l dist/$RELEASE/$s.cpio.gz
done
cd dist/$RELEASE
sha1sum *.gz >SHA1SUMS
